{% extends 'base.html.twig' %}

{% block title %}
	Connectez-vous
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/login.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
	<div class="conteneur">
		<section class="section">
			<div class="sous-section">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="logo col-md-9 col-lg-5 col-xl-5">
						<img src="./src/logo.jpg" style="border-image: auto" class="img-fluid" alt="Sample image"/>
					</div>
					<div class="col-md-8 col-lg-6 col-xl-6 offset-xl-1">
						<form>
							<div>
								<p class="fw-bold">
									Bienvenue sur FitnessP pour les franchisés,
								</p>
								<p>Identifiez-vous :</p>
							</div>

							<!-- Email input -->
							<div class="form-outline mb-4">
								<label class="form-label" for="mail">Mail</label>
								<input type="mail" id="login-mail" class="form-control form-control-lg" name="login_mail" placeholder="Entrez un mail valide" required/>
								<label class="error" style="color: red"></label>
							</div>

							<!-- Password input -->
							<div class="form-outline mb-3">
								<label class="form-label" for="password">Mot de passe</label>
								<input type="password" id="password" class="form-control form-control-lg" name="password" placeholder="Enter password" required/>
							</div>

							<div class="d-flex justify-content-between align-items-center">
								<a href="#!" class="text-body">Forgot password?</a>
							</div>

							<div class="text-center text-lg-start mt-4 pt-2">
								<button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem">
									Login
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>
		<div
			class="footer d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary d-flex absolute-bottom">
			<!-- Copyright -->
			<div class="text-white mb-3 mb-md-0">
				Copyright © 2022. All rights reserved.
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/ajax/login.js') }}"></script>
{% endblock %}
