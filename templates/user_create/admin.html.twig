{% extends 'base.html.twig' %}

{% block title %}Ajouter un administrateur
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/add_user.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
	<div class="container">
		<form>
			<h2 class="formTitle">Ajouter un nouvel administrateur :</h2>

			<div class="inputDiv">
				<label class="inputLabel" for="admin_mail">Entrez votre mail :</label>
				<input type="email" id="admin_mail" name="admin_mail"/>
			</div>

			<div class="inputDiv">
				<label class="inputLabel" for="password">Entrez votre mot de passe :</label>
				<input type="password" id="password" name="password"/>
			</div>

			<div class="inputDiv">
				<label class="inputLabel" for="confirm_password">Confirmez votre mot de passe :</label>
				<input type="password" id="confirm_password" name="confirm_password"/>
			</div>
			<button type="submit" class="btn btn-dark">Valider</button>
			<input type="hidden" name="admin_new" value="new"/>
		</form>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/scripts/common_password.js') }}"></script>
	<script src="{{ asset('js/ajax/admin_new.js') }}"></script>
{% endblock %}
