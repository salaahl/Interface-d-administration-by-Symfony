{% extends 'base.html.twig' %}

{% block title %}Ajouter un partenaire{% endblock %}

{% block body %}
{% apply inline_css(source('@css/create_user.css')) %}

  <div class="container">
    <form method="POST">

      <h2 class="formTitle">
        Ajouter un nouveau partenaire :
      </h2>

      <div class="inputDiv">
        <label class="inputLabel">Nom de la ville :</label>
        {{ form_widget(form.nom) }}
      </div>

      <div class="inputDiv">
        <label class="inputLabel">Entrez un mail :</label>
        {{ form_widget(form.mail) }}
      </div>

      <div class="inputDiv">
        <label class="inputLabel">Entrez un mot de passe :</label>
        {{ form_widget(form.mot_de_passe) }}
      </div>

      <button type="submit" class="btn btn-dark">Valider</button>
    </form>
  </div>
{% endapply %}
{% endblock %}